{
  "name": "training-monorepo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "frontend",
    "frontend-next",
    "api",
    "quote",
    "todo",
    "expense",
    "stopwatch"
  ],
  "scripts": {
    "test": "node scripts/run-tests.js",
    "test:quote": "node quote/tests/test.js",
    "test:expense": "node expense/tests/test.js",
    "test:stopwatch": "node stopwatch/tests/test.js",
    "test:todo": "node todo/tests/test.js",
    "test:dev": "node scripts/run-tests.js --scope dev-week-1",
    "pages:docs": "node scripts/publish-docs.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "coverage:normalize": "node scripts/normalize-coverage.js",
    "format": "prettier --write .",
    "typecheck": "node scripts/quality-gate/check-types.js",
    "typecheck:bail": "node scripts/quality-gate/check-types.js --bail",
    "build": "npm run build:frontend-next && npm run build:frontend && npm run build:api",
    "build:frontend-next": "npm --workspace frontend-next ci --no-audit --no-fund && npm exec -w frontend-next next build",
    "build:frontend": "npm --workspace frontend ci --no-audit --no-fund && npm exec -w frontend vite build",
    "build:api": "npm --workspace api ci --no-audit --no-fund && npm --workspace api run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/jest": "^30.0.0",
    "c8": "^9.1.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "glob": "^7.2.3",
    "prettier": "^3.3.3",
    "jsdom": "^27.0.0",
    "archiver": "^7.0.1"
  },
  "dependencies": {
    "zod": "^4.1.11"
  }
}
