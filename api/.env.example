# Server
PORT=3000
SESSION_SECRET=change-me-dev            # Required in prod; >= 32 chars; generate: openssl rand -base64 32
READ_ONLY=false
IDENTITY_ENABLED=true

# Rate limit (used later)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10

# CORS (used by T069/T095/T103)
# CSV without spaces; never use * in prod if credentials are enabled
ALLOW_ORIGIN=http://localhost:3001
ALLOW_CREDENTIALS=false

# Firebase Admin (use emulators or Secret Manager in prod)
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
# Escape newlines as \n and wrap in quotes
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n<key>\n-----END PRIVATE KEY-----\n"

# Optional: Firebase emulators (documented in quickstart)
# FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# FIREBASE_FIRESTORE_EMULATOR_HOST=localhost:8080

# Legacy (kept for compatibility)
JSON_LIMIT=10kb